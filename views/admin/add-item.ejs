<%- include('../partials/header', { adminPage: true }) %>

<div class="mb-4">
  <a href="/admin/dashboard" class="btn btn-outline-secondary">
    <i class="fas fa-arrow-left"></i> Kembali ke Dashboard
  </a>
</div>

<div class="card shadow">
  <div class="card-header bg-success text-white">
    <h4 class="mb-0">Tambah Barang Baru</h4>
  </div>
  <div class="card-body">
    <form action="/admin/add-item" method="POST" enctype="multipart/form-data">
      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <label for="name" class="form-label">Nama Barang <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
          
          <div class="mb-3">
            <label for="category" class="form-label">Kategori <span class="text-danger">*</span></label>
            <select class="form-select" id="category" name="category" required>
              <option value="" selected disabled>Pilih kategori</option>
              <option value="Dompet/Tas">Dompet/Tas</option>
              <option value="Elektronik">Elektronik</option>
              <option value="Pakaian">Pakaian</option>
              <option value="Kunci">Kunci</option>
              <option value="Dokumen">Dokumen</option>
              <option value="Lainnya">Lainnya</option>
            </select>
          </div>
          
          <div class="mb-3">
            <label for="location" class="form-label">Lokasi <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="location" name="location" required>
          </div>
          
          <div class="mb-3">
            <label for="date" class="form-label">Tanggal <span class="text-danger">*</span></label>
            <input type="date" class="form-control" id="date" name="date" required>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="mb-3">
            <label for="status" class="form-label">Status <span class="text-danger">*</span></label>
            <select class="form-select" id="status" name="status" required>
              <option value="hilang">Hilang</option>
              <option value="ditemukan">Ditemukan</option>
            </select>
          </div>
          
          <div class="mb-3">
            <label for="contactPerson" class="form-label">Nama Kontak</label>
            <input type="text" class="form-control" id="contactPerson" name="contactPerson">
          </div>
          
          <div class="mb-3">
            <label for="contactPhone" class="form-label">Telepon Kontak</label>
            <input type="text" class="form-control" id="contactPhone" name="contactPhone">
          </div>
          
          <div class="mb-3">
            <label for="image" class="form-label">Foto Barang</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/*">
            <div class="form-text">Ukuran maksimal 5MB. Format yang diizinkan: JPG, PNG, GIF.</div>
          </div>
        </div>
        
        <div class="col-12">
          <div class="mb-3">
            <label for="description" class="form-label">Deskripsi <span class="text-danger">*</span></label>
            <textarea class="form-control" id="description" name="description" rows="5" required></textarea>
          </div>
          
          <div class="text-end">
            <button type="reset" class="btn btn-secondary me-2">Reset</button>
            <button type="submit" class="btn btn-success">Simpan</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer', { adminPage: true }) %>